<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".WifiActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Wi-Fi SSID"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="24dp" />

    <!-- SSID input -->
    <EditText
        android:id="@+id/editSsid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Wi-Fi name (SSID)"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:background="@android:drawable/editbox_background_normal"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <!-- Save button -->
    <Button
        android:id="@+id/btnSaveWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Wi-Fi"
        android:textAllCaps="false"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/ScanHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wi-Fi Scan History"
        android:textAllCaps="false"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- List of saved Wi-Fis -->
    <ListView
        android:id="@+id/listViewWifi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="#F9F9F9" />

</LinearLayout>
