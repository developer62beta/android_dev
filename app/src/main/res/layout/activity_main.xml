<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wi-Fi Attendance"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Circular Progress (Days Attended) -->
        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/attendanceCircle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:rotation="-90"
                android:progressDrawable="@drawable/circle_progress" />

            <TextView
                android:id="@+id/totalDaysText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 days"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center" />
        </FrameLayout>

        <!-- Month Label -->
        <TextView
            android:id="@+id/monthLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month: November"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal" />

        <!-- Summary Counts -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <TextView
                android:id="@+id/dayCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAYS: 0"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginEnd="24dp" />

            <TextView
                android:id="@+id/nightCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIGHT: 0"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Buttons -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/historyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="#1565C0"
            android:layout_marginTop="32dp"
            android:layout_margin="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/wifiAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wi-Fi Add"
            android:layout_margin="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAlarmSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Times"
            android:layout_margin="10dp"/>

        <!-- Current Set Times Display -->
        <TextView
            android:id="@+id/dayTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day: --:--"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/nightTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Night: --:--"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
